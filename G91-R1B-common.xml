    <!-- Key mappings -->
    <input>
        <keyboard>
            
            <key n="67">
                <name>C</name>
                <desc>Toggle Canopy</desc>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/manual-switches/cockpit/sw-canopy-togle</property>
                    <value>1</value>
                </binding>
                <mod-up>
                    <binding>
                        <command>property-assign</command>
                        <property>fdm/jsbsim/systems/manual-switches/cockpit/sw-canopy-togle</property>
