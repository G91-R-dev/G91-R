<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <name>Radio_Near_Selector_dialog</name>
    <layout>vbox</layout>
    <default-padding>7</default-padding>
    <modal>false</modal>
    <width>750</width>
    
    <!-- title bar -->
    <group>
        <layout>hbox</layout>
        <default-padding>8</default-padding>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Radio near selector</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            <button>
                <row>0</row>
                <col>0</col>
                <legend>Automatic find VOR-NDB-TACAN-ILS</legend>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/mode-trigger</property>
                    <value>2</value>
                </binding>
            </button>
            <text>
                <row>0</row>
                <col>1</col>
                <label>MMMMMMMM</label>
                <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/mode-description</property>
                <live>true</live>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>2</col>
                <label>MMMM</label>
                <halign>left</halign>
                <live>true</live>
                <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/find-vor-str</property>
                <halign>left</halign>
                <color>
                    <red>1</red>
                    <green>1</green>
                    <blue>1</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>3</col>
                <label>99999999</label>
                <live>true</live>
                <format>%3.3f</format>
                <property>/instrumentation/nav/frequencies/selected-mhz</property>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>4</col>
                <label>Radial</label>
                <halign>left</halign>
                <color>
                    <red>1</red>
                    <green>1</green>
                    <blue>1</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>5</col>
                <label>99999</label>
                <live>true</live>
                <format>%3.0f</format>
                <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/radials-selected-correct-deg</property>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>6</col>
                <label>MMMM</label>
                <live>true</live>
                <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/find-ndb-str</property>
                <halign>left</halign>
                <color>
                    <red>1</red>
                    <green>1</green>
                    <blue>1</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>7</col>
                <label>999</label>
                <live>true</live>
                <format>%3.0f</format>
                <property>/instrumentation/adf/frequencies/selected-khz</property>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>hbox</layout>
        <group>
            <layout>table</layout>
            <text>
                <row>0</row>
                <col>0</col>
                <label>Maximum search distance</label>
                <halign>left</halign>
                <color>
                    <red>1</red>
                    <green>1</green>
                    <blue>1</blue>
                </color>
            </text>
            <slider>
                <row>0</row>
                <col>1</col>
                <name>Maximum search distance</name>
                <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/search-max-dist</property>
                <min>20</min>
                <max>400</max>
                <step>20</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>0</row>
                <col>2</col>
                <label>MMM</label>
                <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/search-max-dist</property>
                <live>true</live>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>3</col>
                <label>Maximum search bearing</label>
                <halign>left</halign>
                <color>
                    <red>1</red>
                    <green>1</green>
                    <blue>1</blue>
                </color>
            </text>
            <slider>
                <row>0</row>
                <col>4</col>
                <name>Maximum search bearing</name>
                <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/search-max-bearing</property>
                <min>10</min>
                <max>180</max>
                <step>10</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>0</row>
                <col>5</col>
                <label>MMM</label>
                <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/search-max-bearing</property>
                <live>true</live>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>hbox</layout>
        <group>
            <layout>table</layout>
            <text>
                <row>0</row>
                <col>0</col>
                <label>Select VOR/ILS</label>
                <halign>left</halign>
                <color>
                    <red>1</red>
                    <green>1</green>
                    <blue>1</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>1</col>
                <label>MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM</label>
                <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/select-vor-description</property>
                <live>true</live>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>1</row>
                <col>0</col>
                <label>Select ADF/NDB</label>
                <halign>left</halign>
                <color>
                    <red>1</red>
                    <green>1</green>
                    <blue>1</blue>
                </color>
            </text>
            <text>
                <row>1</row>
                <col>1</col>
                <label>MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM</label>
                <property>fdm/jsbsim/systems/autopilot/pilot-radio-assistant/select-ndb-description</property>
                <live>true</live>
                <halign>left</halign>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
        </group>
    </group>
    
</PropertyList>
