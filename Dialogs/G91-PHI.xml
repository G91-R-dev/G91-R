    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            <text>
                <row>0</row>
                <col>0</col>
                <label>Route selected</label>
                <halign>left</halign>
                <color>
                    <red>0.6</red>
                    <green>0.6</green>
                    <blue>0.6</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>1</col>
                <label>9999</label>
                <live>true</live>
                <format>%3.0f</format>
                <property>fdm/jsbsim/systems/gauges/PHI/program/route-pushed</property>
                <halign>left</halign>
            </text>
            
            <text>
                <row>0</row>
                <col>2</col>
                <label>Cor. wind speed</label>
                <halign>left</halign>
                <color>
                    <red>0.6</red>
                    <green>0.6</green>
                    <blue>0.6</blue>
                </color>
            </text>
