            </text>
            <text>
                <row>0</row>
                <col>4</col>
                <label>99999999</label>
                <live>true</live>
                <format>%3.0f</format>
                <property>fdm/jsbsim/systems/gauges/PHI/wind/wd</property>
                <halign>left</halign>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>5</col>
                <label>Speed</label>
                <halign>left</halign>
                <color>
                    <red>0.7</red>
                    <green>0.7</green>
                    <blue>0.7</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>6</col>
                <label>99999999</label>
                <live>true</live>
                <format>%3.0f</format>
                <property>fdm/jsbsim/systems/gauges/PHI/wind/ws</property>
                <halign>left</halign>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
