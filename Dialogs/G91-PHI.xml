            </text>
            <text>
                <row>0</row>
                <col>1</col>
                <label>Automatic on/off</label>
                <halign>left</halign>
                <color>
                    <red>0.7</red>
                    <green>0.7</green>
                    <blue>0.7</blue>
                </color>
            </text>
            <checkbox>
                <row>0</row>
                <col>2</col>
                <halign>fill</halign>
                <property>fdm/jsbsim/systems/gauges/PHI/wind/automatic-wind-sw</property>
                <live>true</live>
                <binding>
