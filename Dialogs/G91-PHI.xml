    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            <text>
                <row>0</row>
                <col>0</col>
                <label>Doppler configuration</label>
                <halign>left</halign>
                <color>
                    <red>1</red>
                    <green>1</green>
                    <blue>1</blue>
                </color>
            </text>
            <combo>
                <row>0</row>
                <col>1</col>
                <property>fdm/jsbsim/systems/gauges/PHI/doppler/switch-turn-text</property>
                <value>OFF</value>
                <value>Rec only</value>
                <value>ON</value>
                <value>Test</value>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <binding>
                    <command>nasal</command>
                    <script>
                        <![CDATA[
                            var tag = getprop("fdm/jsbsim/systems/gauges/PHI/doppler/switch-turn-text");
                            if (tag == "OFF") {
                                setprop("fdm/jsbsim/systems/gauges/PHI/doppler/switch-turn",0);
                            } elsif (tag == "Rec only") {
                                setprop("fdm/jsbsim/systems/gauges/PHI/doppler/switch-turn",1);
                            } elsif (tag == "ON") {
                                setprop("fdm/jsbsim/systems/gauges/PHI/doppler/switch-turn",2);
                            } else {
                                setprop("fdm/jsbsim/systems/gauges/PHI/doppler/switch-turn",3);
                            }
                        ]]>
                    </script>
                </binding>
            </combo>
            <radio>
                <row>0</row>
                <col>3</col>
                <halign>left</halign>
                <label>Sea/Land</label>
                <property>fdm/jsbsim/systems/gauges/PHI/doppler/switch-terrain-sea</property>
                <live>true</live>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </radio>
            <radio>
                <row>0</row>
                <col>5</col>
                <halign>left</halign>
                <label>Allarm</label>
                <property>fdm/jsbsim/systems/gauges/PHI/doppler/allarm</property>
                <live>true</live>
            </radio>
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
