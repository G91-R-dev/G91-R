                <legend>Route 1</legend>
                <binding>
                    <command>property-toggle</command>
                    <property>fdm/jsbsim/systems/gauges/PHI/program/route[1]/push-togle</property>
                </binding>
            </button>
            <text>
                <row>1</row>
                <col>0</col>
                <label>Direction</label>
                <halign>center</halign>
                <color>
                    <red>0.6</red>
                    <green>0.6</green>
                    <blue>0.6</blue>
                </color>
            </text>
            <text>
                <row>2</row>
                <col>0</col>
                <label>99999999</label>
                <live>true</live>
                <format>%3.0f (deg)</format>
                <property>fdm/jsbsim/systems/gauges/PHI/program/route[1]/phi</property>
                <halign>center</halign>
            </text>
            <text>
