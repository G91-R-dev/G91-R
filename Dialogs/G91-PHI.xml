        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            <text>
                <row>0</row>
                <col>0</col>
                <label>Doppler command</label>
                <halign>center</halign>
            </text>
            
            <slider>
                <row>1</row>
                <col>0</col>
                <name>doppler_pannel_switch</name>
                <property>fdm/jsbsim/systems/gauges/PHI/doppler/switch</property>
                <min>-1.0</min>
                <max>2.0</max>
                <step>1</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            
            <slider>
                <row>1</row>
                <col>1</col>
                <name>doppler_pannel_switch</name>
                <property>fdm/jsbsim/systems/gauges/PHI/doppler/switch-scanarea</property>
                <min>1.0</min>
                <max>4.0</max>
                <step>1</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
        </group>
    </group>
    
    
