<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <name>G91_Help_dialog</name>
    <layout>vbox</layout>
    <default-padding>7</default-padding>
    <modal>false</modal>
    <width>800</width>
    
    <!-- title bar -->
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Special effects</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/command",2);
                </script>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        <checkbox>
            <row>0</row>
            <col>0</col>
            <halign>fill</halign>
            <property>/fdm/jsbsim/fcs/aero-int-turbulence-active</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>Aero induced turbolence</label>
            <halign>right</halign>
            <row>0</row>
            <col>1</col>
        </text>
    </group>
    
    <hrule/>

    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            <text>
                <label>View</label>
                <halign>left</halign>
                <row>0</row>
                <col>0</col>
            </text>
            <slider>
                <row>1</row>
                <col>0</col>
                <name>ab-camera-zoom</name>
                <property>sim/current-view/ab-camera/set-view/zoom</property>
                <min>20</min>
                <max>100</max>
                <step>1</step>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>1</row>
                <col>1</col>
                <label>99999999</label>
                <live>true</live>
                <format>Zoom: %3.0f</format>
                <property>sim/current-view/ab-camera/set-view/zoom</property>
                <color>
                    <red>0.2</red>
                    <green>0.9</green>
                    <blue>0.2</blue>
                </color>
            </text>
            <slider>
                <row>1</row>
                <col>2</col>
                <name>ab-camera-zoom</name>
                <property>sim/current-view/ab-camera/set-view/heading</property>
                <min>-180</min>
                <max>180</max>
                <step>1</step>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>1</row>
                <col>3</col>
                <label>99999999</label>
                <live>true</live>
                <format>H: %3.0f</format>
                <property>sim/current-view/ab-camera/set-view/heading</property>
                <color>
                    <red>0.2</red>
                    <green>0.9</green>
                    <blue>0.2</blue>
                </color>
            </text>
            <slider>
                <row>1</row>
                <col>4</col>
                <name>ab-camera-zoom</name>
                <property>sim/current-view/ab-camera/set-view/pitch</property>
                <min>-90</min>
                <max>90</max>
                <step>1</step>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>1</row>
                <col>5</col>
                <label>99999999</label>
                <live>true</live>
                <format>P: %3.0f</format>
                <property>sim/current-view/ab-camera/set-view/pitch</property>
                <color>
                    <red>0.2</red>
                    <green>0.9</green>
                    <blue>0.2</blue>
                </color>
            </text>
            <slider>
                <row>2</row>
                <col>0</col>
                <name>radius</name>
                <property>sim/current-view/ab-camera/set-view/radius</property>
                <min>5</min>
                <max>200</max>
                <step>5</step>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>2</row>
                <col>1</col>
                <label>99999999</label>
                <live>true</live>
                <format>Radius: %3.0f</format>
                <property>sim/current-view/ab-camera/set-view/radius</property>
                <color>
                    <red>0.2</red>
                    <green>0.9</green>
                    <blue>0.2</blue>
                </color>
            </text>
