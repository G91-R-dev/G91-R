            <slider>
                <row>2</row>
                <col>6</col>
                <name>ab-camera-zoom</name>
                <property>sim/current-view/ab-camera/set-view/time-travel</property>
                <min>1</min>
                <max>10</max>
                <step>1</step>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>2</row>
                <col>7</col>
                <label>99999999</label>
                <live>true</live>
                <format>TT: %3.0f</format>
                <property>sim/current-view/ab-camera/set-view/time-travel</property>
                <color>
                    <red>0.2</red>
                    <green>0.9</green>
                    <blue>0.2</blue>
                </color>
            </text>
            <checkbox>
                <row>2</row>
                <col>8</col>
                <label>Set</label>
                <property>sim/current-view/ab-camera/view/active</property>
                <live>true</live>
                <binding>
                    <command>nasal</command>
                    <script>
                        setprop("sim/current-view/ab-camera/set-view/time-before",0.0);
                        setprop("sim/current-view/ab-camera/set-view/time-after",0.0);
                        var r = getprop("sim/current-view/ab-camera/set-view/radius");
                        var x = r * math.cos(getprop("sim/current-view/ab-camera/set-view/heading") * 0.0174533);
                        var y = r * math.sin(getprop("sim/current-view/ab-camera/set-view/heading") * 0.0174533);
                        var z = r * math.sin(getprop("sim/current-view/ab-camera/set-view/pitch") * 0.0174533);
                        setprop("sim/current-view/ab-camera/set-view/x-offset",x);
                        setprop("sim/current-view/ab-camera/set-view/y-offset",y);
                        setprop("sim/current-view/ab-camera/set-view/z-offset",z);
                        setprop("sim/current-view/ab-camera/set-view/set","1,0");
                    </script>
                </binding>
            </checkbox>
        </group>
    </group>
    
    <hrule/>

</PropertyList>
