<PropertyList>
    
    <name>Livery_dialog</name>
    <layout>vbox</layout>
    <default-padding>7</default-padding>
    <modal>false</modal>
    <width>400</width>
    
    <!-- title bar -->
    
    <empty><stretch>true</stretch></empty>
    
    
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Livery configuration</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            
            <button>
                <row>0</row>
                <col>0</col>
                <legend>01</legend>
                <binding>
                    <command>nasal</command>
                    <script>
                        setprop("sim/G91/liveries/active/ID",1);
                    </script>
                </binding>
            </button>
            <text>
                <row>0</row>
                <col>1</col>
                <label>PAN - National Aerobatic Pinocchio nose (R1)</label>
                <halign>left</halign>
            </text>
            
            <button>
                <row>1</row>
                <col>0</col>
                <legend>02</legend>
                <binding>
                    <command>nasal</command>
                    <script>
                        setprop("sim/G91/liveries/active/ID",2);
                    </script>
                </binding>
            </button>
            <text>
                <row>1</row>
                <col>1</col>
                <label>PAN - National Aerobatic recognition nose (R1B)</label>
                <halign>left</halign>
            </text>

            <button>
                <row>2</row>
                <col>0</col>
                <legend>03</legend>
                <binding>
                    <command>nasal</command>
                    <script>
                        setprop("sim/G91/liveries/active/ID",3);
                    </script>
                </binding>
            </button>
            <text>
                <row>2</row>
                <col>1</col>
                <label>Italian Air Force - 2nd flight flock n. 37 (R1B)</label>
                <halign>left</halign>
            </text>

            <button>
                <row>3</row>
                <col>0</col>
                <legend>04</legend>
                <binding>
                    <command>nasal</command>
                    <script>
                        setprop("sim/G91/liveries/active/ID",4);
                    </script>
                </binding>
            </button>
            <text>
                <row>3</row>
                <col>1</col>
                <label>Silver version, used as a prototype Pinocchio nose (R1)</label>
                <halign>left</halign>
            </text>
            
            <button>
                <row>4</row>
                <col>0</col>
                <legend>05</legend>
                <binding>
                    <command>nasal</command>
                    <script>
                        setprop("sim/G91/liveries/active/ID",5);
                    </script>
                </binding>
            </button>
            <text>
                <row>4</row>
                <col>1</col>
                <label>Silver version R1B recognition nose (R1B)</label>
                <halign>left</halign>
            </text>
            
            <button>
                <row>5</row>
                <col>0</col>
                <legend>06</legend>
                <binding>
                    <command>nasal</command>
                    <script>
                        setprop("sim/G91/liveries/active/ID",6);
                    </script>
                </binding>
            </button>
            <text>
                <row>5</row>
                <col>1</col>
                <label>Portuguese R3 c/n 301 (R3)</label>
                <halign>left</halign>
            </text>
            
            <button>
                <row>6</row>
                <col>0</col>
                <legend>07</legend>
                <binding>
                    <command>nasal</command>
                    <script>
                        setprop("sim/G91/liveries/active/ID",7);
                    </script>
                </binding>
            </button>
            <text>
                <row>6</row>
                <col>1</col>
                <label>Luftwaffe c/n 535 (R3)</label>
                <halign>left</halign>
            </text>
            
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            
            <text>
                <row>0</row>
                <col>0</col>
                <label>Set luminosity</label>
                <halign>left</halign>
            </text>
            <slider>
                <row>0</row>
                <col>1</col>
                <width>100</width>
                <property>sim/G91/liveries/active/luminosity</property>
                <min>-1</min>
                <max>1</max>
                <step>0.01</step>
                <binding>
                <command>property-assign</command>
                    <property>sim/G91/liveries/active/pushed</property>
                    <value>1</value>
                </binding>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>0</row>
                <col>2</col>
                <halign>left</halign>
                <label>99999</label>
                <live>true</live>
                <format>%1.2f </format>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
                <property>sim/G91/liveries/active/luminosity</property>
            </text>
            
            <text>
                <row>1</row>
                <col>0</col>
                <label>Set reflective</label>
                <halign>left</halign>
            </text>
            <slider>
                <row>1</row>
                <col>1</col>
                <width>100</width>
                <property>sim/G91/liveries/active/reflective</property>
                <min>-1</min>
                <max>0</max>
                <step>0.01</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>1</row>
                <col>2</col>
                <halign>left</halign>
                <label>99999</label>
                <live>true</live>
                <format>%1.2f </format>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
                <property>sim/G91/liveries/active/reflective</property>
            </text>
            
            <text>
                <row>2</row>
                <col>0</col>
                <label>Set diffuse</label>
                <halign>left</halign>
            </text>
            <slider>
                <row>2</row>
                <col>1</col>
                <width>100</width>
                <property>sim/G91/liveries/active/diffuse</property>
                <min>0</min>
                <max>1</max>
                <step>0.01</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>2</row>
                <col>2</col>
                <halign>left</halign>
                <label>99999</label>
                <live>true</live>
                <format>%1.2f </format>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
                <property>sim/G91/liveries/active/diffuse</property>
            </text>
            
            <text>
                <row>3</row>
                <col>0</col>
                <label>Set specular</label>
                <halign>left</halign>
            </text>
            <slider>
                <row>3</row>
                <col>1</col>
                <width>100</width>
                <property>sim/G91/liveries/active/specular</property>
                <min>0</min>
                <max>1</max>
                <step>0.01</step>  
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </slider>
            <text>
                <row>3</row>
                <col>2</col>
                <halign>left</halign>
                <label>99999</label>
                <live>true</live>
                <format>%1.2f </format>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
                <property>sim/G91/liveries/active/specular</property>
            </text>
            
            <text>
                <row>4</row>
                <col>0</col>
                <label>Set dirty</label>
                <halign>left</halign>
            </text>
            <button>
                <row>4</row>
                <col>1</col>
                <legend>Dirty on/off</legend>
                <binding>
                    <command>property-toggle</command>
                    <property>sim/G91/liveries/active/dirtySet</property>
                </binding>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </button>
            <text>
                <row>4</row>
                <col>2</col>
                <halign>left</halign>
                <live>true</live>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.9</blue>
                </color>
                <property>sim/G91/liveries/active/dirtyMsg</property>
            </text>
            
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <group>
            <layout>table</layout>
            
            <text>
                <row>0</row>
                <col>0</col>
                <label>Set livery resolution</label>
                <halign>left</halign>
            </text>
            <button>
                <row>0</row>
                <col>1</col>
                <legend>1024</legend>
                <binding>
                    <command>property-assign</command>
                    <property>sim/G91/liveries/active/setResolution</property>
                    <value>1</value>
                </binding>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </button>
            <button>
                <row>0</row>
                <col>2</col>
                <legend>2048</legend>
                <binding>
                    <command>property-assign</command>
                    <property>sim/G91/liveries/active/setResolution</property>
                    <value>2</value>
                </binding>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </button>
            <button>
                <row>0</row>
                <col>3</col>
                <legend>4096</legend>
                <binding>
                    <command>property-assign</command>
                    <property>sim/G91/liveries/active/setResolution</property>
                    <value>3</value>
                </binding>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </button>

            <text>
                <row>0</row>
                <col>4</col>
                <halign>center</halign>
                <label>99999</label>
                <live>true</live>
                <format>%1.0f </format>
                <color>
                    <red>0.8</red>
                    <green>0.0</green>
                    <blue>0.0</blue>
                </color>
                <property>sim/G91/liveries/active/resolution</property>
            </text>
            
        </group>
    </group>

