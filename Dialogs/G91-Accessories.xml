<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <name>G91_Help_dialog</name>
    <layout>vbox</layout>
    <default-padding>7</default-padding>
    <modal>false</modal>
    <width>700</width>

    <!-- title bar -->
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Accessories</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        <checkbox>
            <row>0</row>
            <col>0</col>
            <halign>fill</halign>
            <property>sim/G91/parts/SFOM_83A/show</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>Show / hide SFOM 83A</label>
            <halign>right</halign>
            <row>0</row>
            <col>1</col>
        </text>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        <checkbox>
            <row>0</row>
            <col>0</col>
            <halign>fill</halign>
            <property>sim/G91/parts/cloche/show</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>Show / hide cloche</label>
            <halign>right</halign>
            <row>0</row>
            <col>1</col>
        </text>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        <checkbox>
            <row>0</row>
            <col>0</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/staircase</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>Staircase for pilot</label>
            <halign>right</halign>
            <row>0</row>
            <col>1</col>
        </text>
    </group>
    
    <hrule/>

    <group>
        <layout>table</layout>
        <text>
            <label>Steady illuminators operative</label>
            <halign>left</halign>
            <row>0</row>
            <col>0</col>
        </text>
        <checkbox>
            <row>0</row>
            <col>1</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/illuminators/isOperative</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>show with min ambient light</label>
            <halign>left</halign>
            <row>0</row>
            <col>2</col>
        </text>
        <slider>
            <name>illuminator show mil lighth</name>
            <row>0</row>
            <col>3</col>
            <property>sim/G91/accessories/illuminators/minAmbientLight</property>
            <min>0.0</min>
            <max>1.0</max>
            <step>0.05</step>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
    </group>
    
    <group>
        <layout>table</layout>
        <checkbox>
            <row>0</row>
            <col>0</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/illuminators/sx/active</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>Ext. illuminator Sx</label>
            <halign>left</halign>
            <row>0</row>
            <col>1</col>
        </text>
        <text>
            <label>Pitch</label>
            <halign>left</halign>
            <row>0</row>
            <col>2</col>
        </text>
        <slider>
            <name>illuminator Sx pitch</name>
            <row>0</row>
            <col>3</col>
            <property>sim/G91/accessories/illuminators/sx/pitch</property>
            <min>0.0</min>
            <max>30.0</max>
            <step>1.0</step>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
        <text>
            <label>Yaw</label>
            <halign>left</halign>
            <row>0</row>
            <col>4</col>
        </text>
        <slider>
            <name>illuminator Sx heading</name>
            <row>0</row>
            <col>5</col>
            <property>sim/G91/accessories/illuminators/sx/yaw</property>
            <min>-90.0</min>
            <max>90</max>
            <step>1.0</step>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
        <text>
            <label>Intensity</label>
            <halign>left</halign>
            <row>0</row>
            <col>6</col>
        </text>
        <slider>
            <row>0</row>
            <col>7</col>
            <name>Intensity</name>
            <property>sim/G91/accessories/illuminators/sx/intensity</property>
            <min>0.0</min>
            <max>1.0</max>
            <step>0.1</step>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>

    </group>

    <group>
        <layout>table</layout>
        <checkbox>
            <row>0</row>
            <col>0</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/illuminators/dx/active</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>Ext. illuminator Dx</label>
            <halign>left</halign>
            <row>0</row>
            <col>1</col>
        </text>
        <text>
            <label>Pitch</label>
            <halign>left</halign>
            <row>0</row>
            <col>2</col>
        </text>
        <slider>
            <name>illuminator Dx pitch</name>
            <row>0</row>
            <col>3</col>
            <property>sim/G91/accessories/illuminators/dx/pitch</property>
            <min>0.0</min>
            <max>30.0</max>
            <step>1.0</step>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
        <text>
            <label>Yaw</label>
            <halign>left</halign>
            <row>0</row>
            <col>4</col>
        </text>
        <slider>
            <name>illuminator Sx heading</name>
            <row>0</row>
            <col>5</col>
            <property>sim/G91/accessories/illuminators/dx/yaw</property>
            <min>-90.0</min>
            <max>90</max>
            <step>1.0</step>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
        <text>
            <label>Intensity</label>
            <halign>left</halign>
            <row>0</row>
            <col>6</col>
        </text>
        <slider>
            <row>0</row>
            <col>7</col>
            <name>Intensity</name>
            <property>sim/G91/accessories/illuminators/dx/intensity</property>
            <min>0.0</min>
            <max>1.0</max>
            <step>0.1</step>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>

    </group>

    <hrule/>

</PropertyList>
