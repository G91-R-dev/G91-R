<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <name>militar-pilot-assistant</name>
    <layout>vbox</layout>
    <default-padding>8</default-padding>
    <modal>false</modal>
    <width>1024</width>
    
    <!-- title bar -->
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Militar Pilot Assistant</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <checkbox>
            <property>fdm/jsbsim/systems/autopilot/gui/interception-ai-mp</property>
            <live>true</live>
            <label>Switch AI/MP</label>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-ai-mp-mod</property>
                <value>1</value>
            </binding>
        </checkbox>
        <text>
            <pref-width>200</pref-width>
            <label>999999999999999</label>
            <halign>left</halign>
            <live>true</live>
            <property>fdm/jsbsim/systems/autopilot/gui/interception-ai-mp-msg</property>
            <color>
                <red>0.9</red>
                <green>0.9</green>
                <blue>0.0</blue>
            </color>
        </text>
        <text>
            <label>Proxy speed coef.</label>
        </text>
        <slider>
            <name>interception-speed-mph-coefficient</name>
            <halign>center</halign>
            <property>fdm/jsbsim/systems/autopilot/gui/interception-speed-mph-coefficient</property>
            <min>2</min>
            <max>32</max>
            <step>1</step>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
        <text>
            <label>99999</label>
            <live>true</live>
            <halign>right</halign>
            <format>%2.1f</format>
            <property>fdm/jsbsim/systems/autopilot/gui/interception-speed-mph-coefficient</property>
            <color>
                <red>0.9</red>
                <green>0.9</green>
                <blue>0.0</blue>
            </color>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>hbox</layout>
        <group>
            <layout>table</layout>
            
            <button>
                <row>0</row>
                <col>0</col>
                <pref-width>100</pref-width>
                <legend>Interception</legend>
                <live>true</live>
                <binding>
                    <command>property-toggle</command>
                    <property>fdm/jsbsim/systems/autopilot/gui/interception-control-active</property>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/autopilot/gui/interception-control-mod</property>
                    <value>1</value>
                </binding>
            </button>
            <text>
                <row>0</row>
                <col>1</col>
                <label>9999999999</label>
                <halign>left</halign>
                <live>true</live>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-control-msg</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>2</col>
                <label>999</label>
                <halign>left</halign>
                <live>true</live>
                <format>[% 1.0f] </format>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-control-active-level</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>3</col>
                <label>Direct id:</label>
                <halign>left</halign>
            </text>
            <combo>
                <row>0</row>
                <col>4</col>
                <pref-width>500</pref-width>
                <halign>left</halign>
                <name>airplane-selector</name>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-list/airplane</property>
                <editable>false</editable>
                <properties>fdm/jsbsim/systems/autopilot/gui/interception-list/airplanes</properties>
                <binding>
                    <command>dialog-apply</command>
                    <object-name>airplane-selector</object-name>
                </binding>
                <binding>
                    <command>nasal</command>
                    <script>
                        setprop("fdm/jsbsim/systems/autopilot/gui/interception-list/rw_select",1);
                    </script>
                </binding>
            </combo>
        </group>
    </group>
    
    <hrule/>
    
    <group>
        <layout>hbox</layout>
        
        <group>
            <layout>table</layout>
            <text>
                <row>0</row>
                <col>0</col>
                <label>Id</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <input>
                <row>0</row>
                <col>1</col>
                <pref-width>40</pref-width>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-id-select</property>
                <live>true</live>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/autopilot/gui/interception-id-mod</property>
                    <value>1</value>
                </binding>
            </input>
            <text>
                <row>0</row>
                <col>2</col>
                <label>Callsign</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <input>
                <row>0</row>
                <col>3</col>
                <pref-width>130</pref-width>
                <property>fdm/jsbsim/systems/autopilot/gui/interception-callsign-select</property>
                <live>true</live>
                <binding>
                    <command>dialog-apply</command>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/autopilot/gui/interception-callsign-mod</property>
                    <value>1</value>
                </binding>
            </input>
            <text>
                <row>0</row>
                <col>4</col>
                <label>Dist nm</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>5</col>
                <label>99999</label>
                <halign>left</halign>
                <live>true</live>
                <format>%3.1f</format>
                <property>fdm/jsbsim/systems/autopilot/interception-target-dist-nm</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
                <text>
                <row>0</row>
                <col>6</col>
                <label>Target speed (mph)</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>7</col>
                <label>99999</label>
                <halign>left</halign>
                <live>true</live>
                <format>%3.1f</format>
                <property>fdm/jsbsim/systems/autopilot/interception-target-speed-mph</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>8</col>
                <label>99999</label>
                <halign>left</halign>
                <live>true</live>
                <format>[% 3.1f] </format>
                <property>fdm/jsbsim/systems/autopilot/interception-target-speed-dif-mph</property>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>9</col>
                <label>Target dh</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>10</col>
                <label>99999</label>
                <halign>left</halign>
                <live>true</live>
                <format>%5.0f</format>
                <property>fdm/jsbsim/systems/autopilot/altitude-selected-ft-dif</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>11</col>
                <label>h (ft)</label>
                <color>
                    <red>0.8</red>
                    <green>0.8</green>
                    <blue>0.8</blue>
                </color>
            </text>
            <text>
                <row>0</row>
                <col>12</col>
                <label>99999</label>
                <halign>left</halign>
                <live>true</live>
                <format>%5.0f</format>
                <property>fdm/jsbsim/systems/autopilot/gui/altitude-hold-ft</property>
                <color>
                    <red>0.9</red>
                    <green>0.9</green>
                    <blue>0.0</blue>
                </color>
            </text>
        </group>
    </group>

</PropertyList>
