        <object-name>hp_sx-dx_ext_01</object-name>
    </effect>

    <animation> 
        <type>material</type>
        <object-name>hp_sx-dx_ext_01</object-name>
        <diffuse>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>sim/G91/liveries/active/diffuse</factor-prop>
        </diffuse>
        <ambient>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </ambient>
        <specular>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>sim/G91/liveries/active/specular</factor-prop>
        </specular>
    </animation>
    
    <animation>
        <type>select</type>
        <object-name>hp_sx-dx_ext_01</object-name>
        <condition>
            <equals>
                <property>/fdm/jsbsim/systems/stations/stationDxInternal/typeHardpoint</property>
                <value>1</value>
