<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <path>strut_tank.ac</path>
    
    <!-- On internal Hardpoints -->
       
    <animation>
        <type>select</type>
        <object-name>strut_sx_ant</object-name>
        <object-name>strut_sx_post</object-name>
        <condition>
            <greater-than-equals>
                <property>/fdm/jsbsim/systems/stations/hardPointSxInternal/Count</property>
                <value>1</value>
            </greater-than-equals>
        </condition>
    </animation>
    
    <animation>
        <type>select</type>
        <object-name>strut_dx_ant</object-name>
        <object-name>strut_dx_post</object-name>
        <condition>
            <greater-than-equals>
                <property>/fdm/jsbsim/systems/stations/hardPointDxInternal/Count</property>
                <value>1</value>
            </greater-than>
        </condition>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>strut_dx_ant</object-name>
        <object-name>strut_dx_post</object-name>
        <object-name>strut_sx_ant</object-name>
        <object-name>strut_sx_post</object-name>
        <texture>Pictures/G91-Dark-Grey.png</texture>
        <ambient>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </ambient>
    </animation>

</PropertyList>
