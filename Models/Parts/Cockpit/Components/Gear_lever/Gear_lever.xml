<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <path>gear_lever.ac</path>

    <!-- Materials effects --> 
    <animation>
        <name>LandinGearLeverage</name>
        <object-name>Circle</object-name>
        <object-name>Circle.001</object-name>
        <object-name>Torus</object-name>
        <object-name>Torus.001</object-name>
        <object-name>Cube.001</object-name>
        <object-name>I_ironware.001</object-name>
        <object-name>I_ironware.002</object-name>
    </animation> 
    
    <animation> 
        <type>material</type>
        <object-name>Torus</object-name>
        <texture>Pictures/G91-Red_02.png</texture>
        <ambient>
            <red>0.80</red>
            <green>0.73</green>
            <blue>0.53</blue>
        </ambient>
        <specular>
            <red>1.0</red>
            <green>0.2</green>
            <blue>0.0</blue>
        </specular>
        <emission>
            <red>0.15</red>
            <green>0.1</green>
            <blue>0.03</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>Circle</object-name>
        <object-name>Circle.001</object-name>
        <object-name>pannelli_laterali.004</object-name>
        <object-name>I_ironware.000</object-name>
        <object-name>I_ironware.001</object-name>
        <object-name>I_ironware.002</object-name>
        <object-name>I_ironware.003</object-name>
        <texture>Pictures/G91-Dark-Grey.png</texture>
        <ambient>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.5</blue>
        </ambient>
        <emission>
            <red>0.02</red>
            <green>0.01</green>
            <blue>0.005</blue>
            <factor-prop>sim/G91/gauge_green_light_emission</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>Circle</object-name>
        <texture>Pictures/G91-Dark-Grey.png</texture>
        <ambient>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.5</blue>
        </ambient>
        <emission>
            <red>0.1</red>
            <green>0.02</green>
            <blue>0.01</blue>
            <factor-prop>sim/G91/gauge_green_light_emission</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>Cube.001</object-name>
        <object-name>Circle.001</object-name>
        <object-name>box_gauges_gearposition</object-name>
        <texture>Pictures/G91-Al_02.png</texture>
        <ambient>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.5</blue>
        </ambient>
        <emission>
            <red>0.02</red>
            <green>0.01</green>
            <blue>0.005</blue>
            <factor-prop>sim/G91/gauge_green_light_emission</factor-prop>
        </emission>
    </animation>
    
    <animation>
        <object-name>LandinGearLeverage</object-name>
        <type>rotate</type>
        <property>gear/gear/position-norm</property>
        <factor>50</factor>
        <offset-deg>-40</offset-deg>
        <center>
            <x-m>-0.01315</x-m>
            <y-m>0</y-m>
            <z-m>-0.0441</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
    
    <animation>
        <type>pick</type>
        <object-name>Torus</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-toggle</command>
                <property>/controls/gear/gear-down</property>
                <step>1</step>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>Circle</object-name>
        <object-name>Circle.001</object-name>
        <object-name>pannelli_laterali.004</object-name>
        <object-name>I_ironware.000</object-name>
        <object-name>I_ironware.001</object-name>
        <object-name>I_ironware.002</object-name>
        <object-name>I_ironware.003</object-name>
        <texture>Pictures/G91-Dark-Grey.png</texture>
        <ambient>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.5</blue>
        </ambient>
        <emission>
            <red>0.05</red>
            <green>0.02</green>
            <blue>0.01</blue>
            <factor-prop>sim/G91/gauge_green_light_emission</factor-prop>
        </emission>
    </animation>
    
    <model>
        <name>procedural_light_cockpit_gauge_spot_red</name>
        <path>Aircraft/G91/Models/Parts/Cockpit/Effects/lights/procedural_light_cockpit_gauge_spot_red.xml</path>
        <offsets>
            <x-m> 0.08</x-m>
            <y-m> 0.05 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>
    
</PropertyList> 
