<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <path>lg_canopy_light.ac</path>
    
    <effect>
        <inherits-from>Aircraft/G91-R1B_HD/Models/Effects/Interior_Shading/Interior_Shading</inherits-from>
        <object-name>box (Meshed)</object-name>
        <object-name>light_cover_border (Meshed)</object-name>
        <object-name>light_cover (Meshed)</object-name>
    </effect>
    
    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>light_cover_border (Meshed)</object-name>
        <object-name>light_cover (Meshed)</object-name>
    </effect>

    <animation> 
        <type>material</type>
        <object-name>box (Meshed)</object-name>
        <texture>Pictures/G91-Black.png</texture>
        <ambient>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </ambient>
        <emission>
            <red>0.051</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>light_cover (Meshed)</object-name>
        <texture>Pictures/G91-Red_01.png</texture>
        <transparency>
            <alpha>1.0</alpha>
        </transparency>
        <ambient>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </ambient>
        <emission>
            <red>0.6</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>fdm/jsbsim/systems/warning-lights/cockpit/lg_canopy_light</factor-prop>
        </emission>
        <specular>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.5</blue>
        </specular>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>light_cover_border (Meshed)</object-name>
        <transparency>
            <alpha>0.5</alpha>
            <factor-prop>fdm/jsbsim/systems/warning-lights/cockpit/lg_canopy_light</factor-prop>
        </transparency>
        <ambient>
            <red>0.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
        </ambient>
        <emission>
            <red>1.0</red>
            <green>0.6</green>
            <blue>0.15</blue>
            <factor-prop>fdm/jsbsim/systems/warning-lights/cockpit/lg_canopy_light</factor-prop>
        </emission>
    </animation>
        
    <model>
        <condition>
            <and>
                <greater-than-equals>
                    <property>fdm/jsbsim/systems/warning-lights/cockpit/lg_canopy_light</property>
                    <value>0.1</value>
                </greater-than-equals>
            </and>
        </condition>
        <name>pb_light_effect</name>
        <path>Aircraft/G91-R1B_HD/Models/Parts/Cockpit/Effects/lights/procedural_light_cockpit_advise_red.xml</path>
        <offsets>
            <x-m> 0.04</x-m>
            <y-m> -0.005 </y-m>
            <z-m> 0.015 </z-m>
        </offsets>
    </model>
    
</PropertyList>
