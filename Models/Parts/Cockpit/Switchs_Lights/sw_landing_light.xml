<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <path>sw_landing_light.ac</path>
    
    <!--
    <effect>
        <inherits-from>Aircraft/G91-R1B_HD/Models/Effects/Reflections/reflection_black_00</inherits-from>
        <object-name>border (Meshed)</object-name>
        <object-name>support (Meshed)</object-name>
    </effect>
    -->
    
    <effect>
        <inherits-from>Aircraft/G91-R1B_HD/Models/Effects/Reflections/reflection_silver_D2_1</inherits-from>
        <object-name>ball (Meshed)</object-name>
        <object-name>border (Meshed)</object-name>
    </effect>
    
    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>sphere (Meshed)</object-name>
    </effect>
    
    <animation> 
        <type>material</type>
        <object-name>support (Meshed)</object-name>
        <diffuse>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.85</blue>
        </diffuse>
        <ambient>
            <red>0.4</red>
            <green>0.4</green>
            <blue>0.4</blue>
        </ambient>
        <specular>
            <red>0.2</red>
            <green>0.2</green>
            <blue>0.2</blue>
        </specular>
        <emission>
            <red>0.10</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>base (Meshed)</object-name>
        <diffuse>
            <red>0.3</red>
            <green>0.3</green>
            <blue>0.3</blue>
        </diffuse>
        <ambient>
            <red>0.9</red>
            <green>0.9</green>
            <blue>0.9</blue>
        </ambient>
        <specular>
            <red>0.8</red>
            <green>0.9</green>
            <blue>0.9</blue>
        </specular>
        <emission>
            <red>0.05</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>sphere (Meshed)</object-name>
        <transparency>
            <alpha>0.5</alpha>
        </transparency>
        <ambient>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </ambient>
        <specular>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.5</blue>
        </specular>
        <emission>
            <red-prop>sim/G91/re_emit/gauge_red_50_phosphorescent_light</red-prop>
            <green-prop>sim/G91/re_emit/gauge_phosphorescent_light</green-prop>
            <blue>0.0</blue>
            <factor>0.25</factor>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>lamp (Meshed)</object-name>
        <specular>
            <red>0.9</red>
            <green>0.9</green>
            <blue>0.2</blue>
        </specular>
        <ambient>
            <red>0.9</red>
            <green>0.9</green>
            <blue>0.9</blue>
        </ambient>
        <emission>
            <red>0.14</red>
            <green>0.2</green>
            <blue>0.04</blue>
            <factor-prop>sim/G91/re_emit/gauge_phosphorescent_light</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>border (Meshed)</object-name>
        <object-name>support (Meshed)</object-name>
        <object-name>sphere (Meshed)</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/systems/manual-switches/cockpit/sw-landing-light</property>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>border (Meshed)</object-name>
        <object-name>support (Meshed)</object-name>
        <object-name>sphere (Meshed)</object-name>
        <object-name>lamp (Meshed)</object-name>
        <property>fdm/jsbsim/systems/manual-switches/cockpit/sw-landing-light-pos</property>
        <offset-deg>20</offset-deg>
        <factor>-40</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <center>
            <x-m> -0.017</x-m>
            <y-m> 0.0</y-m>
            <z-m> 0.0</z-m>
        </center>
    </animation>
    
</PropertyList> 
 
