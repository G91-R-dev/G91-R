<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <model>
        <path>Aircraft/G91-R1B_HD/Models/Parts/Wing/Components/Fuel_inlet/fuel_inlet.xml</path>
    </model>
    
    <animation>
        <type>noshadow</type>
        <object-name>flux effect (Meshed)</object-name>
    </animation>
    
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>cover screew (Meshed)</object-name>
        <object-name>cover (Meshed)</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.5</interval-sec>
            <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/systems/fuel/inlet-b-togle</property>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>cover screew (Meshed)</object-name>
        <object-name>cover (Meshed)</object-name>
        <property>fdm/jsbsim/systems/fuel/inlet-b-pos</property>
        <offset-deg>0</offset-deg>
        <factor>180</factor>
        <center>
            <x-m> 0.07</x-m>
            <y-m> 0.0</y-m>
            <z-m> 0.0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1.0</y>
            <z>0</z>
        </axis>
    </animation>
    
    <animation>
        <type>translate</type>
        <object-name>cover screew (Meshed)</object-name>
        <object-name>cover (Meshed)</object-name>
        <property>fdm/jsbsim/systems/fuel/inlet-b-pos</property>
        <factor>0.03</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>material</type> 
        <object-name>flux effect (Meshed)</object-name>
        <transparency>
            <alpha>0.0</alpha>
        </transparency>
        <diffuse>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </diffuse>
        <emission>
            <red>0.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
        </emission>
    </animation>

    <model>
        <name>flux effect (Meshed)</name>
        <path>Effects/lights/fuel_inlet_b.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> 0.0 </y-m>
            <z-m> 0.0 </z-m>
            <pitch-deg>0</pitch-deg>
        </offsets>
    </model>

</PropertyList>
