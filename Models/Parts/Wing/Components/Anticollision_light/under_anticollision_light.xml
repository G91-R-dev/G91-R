<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <path>under_anticollision_light.ac</path>
    
    <effect>
        <inherits-from>Aircraft/G91-R1B_HD/Models/Effects/exterior/exterior-glass</inherits-from>
        <object-name>glass (Meshed)</object-name>
        <object-name>lamp (Meshed)</object-name>
    </effect>
    
    <effect>
        <inherits-from>Aircraft/G91-R1B_HD/Models/Effects/Reflections/reflection_chrome</inherits-from>
        <object-name>mirror (Meshed)</object-name>
        <object-name>base (Meshed)</object-name>
    </effect>
    
    <animation>
        <type>noshadow</type>
        <object-name>base (Meshed)</object-name>
        <object-name>glass (Meshed)</object-name>
        <object-name>lamp (Meshed)</object-name>
        <object-name>mirror (Meshed)</object-name>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>mirror (Meshed)</object-name>
        <diffuse>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
        </diffuse>
        <ambient>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
        </ambient>
        <emission>
            <red>0.9</red>
            <green>0.9</green>
            <blue>0.9</blue>
            <factor-prop>fdm/jsbsim/systems/lightning/ambient-light-anticollision-intensity</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>glass (Meshed)</object-name>
        <transparency>
            <alpha-prop>fdm/jsbsim/systems/lightning/ambient-light-anticollision-glass</alpha-prop>
            <factor>1.0</factor>
            <offset>0.1</offset>
        </transparency>
        <diffuse>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
        </diffuse>
        <ambient>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </ambient>
        <emission>	
            <red>0.8</red>	
            <green>0.8</green>	
            <blue>0.8</blue>
            <factor-prop>fdm/jsbsim/systems/lightning/ambient-light-anticollision-intensity</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type> 
        <object-name>lamp (Meshed)</object-name>
        <transparency>
            <alpha-prop>fdm/jsbsim/systems/lightning/ambient-light-anticollision-glass-lamp</alpha-prop>
            <factor>1.2</factor>
            <offset>0.0</offset>
        </transparency>
        <diffuse>
            <red>0.8</red>
            <green>0.8</green>
            <blue>0.8</blue>
        </diffuse>
        <ambient>
            <red>0.3</red>
            <green>0.3</green>
            <blue>0.3</blue>
        </ambient>
        <emission>	
            <red>1.2</red>	
            <green>1.2</green>	
            <blue>1.2</blue>
            <factor-prop>fdm/jsbsim/systems/lightning/ambient-light-anticollision-intensity</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type> 
        <object-name>base (Meshed)</object-name>
        <diffuse>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
        </diffuse>
        <ambient>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
        </ambient>
        <emission>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.5</blue>
            <factor-prop>fdm/jsbsim/systems/lightning/ambient-light-anticollision-intensity</factor-prop>
        </emission>
    </animation>
    
    <model>
        <name>glass (Meshed)</name>
        <path>Effects/lights/under-anticollision-00.xml</path>
        <offsets>
            <x-m> 0.03 </x-m>
            <y-m> 0.0 </y-m>
            <z-m> -0.02 </z-m>
            <heading-deg>0.0</heading-deg>
            <pitch-deg>180.0</pitch-deg>
        </offsets>
    </model>
    
</PropertyList>
