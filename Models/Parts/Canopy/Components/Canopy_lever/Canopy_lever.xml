<PropertyList>

<path>Canopy_lever.ac</path>
    
    <!--
    <effect>
        <inherits-from>Aircraft/G91-R1B_HD/Models/Effects/Reflections/reflection_black_00</inherits-from>
        <object-name>F_lever_canopy01</object-name>
        <object-name>F_lever_canopy02</object-name>
    </effect>
    -->

    <animation>
        <type>material</type>
        <object-name>F_lever_canopy01</object-name>
        <texture>Pictures/G91-Al-Light.png</texture>
        <ambient>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.5</blue>
        </ambient>
        <emission>
            <red>0.02</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
    </animation>
    
    <animation>
        <type>material</type>
        <object-name>F_lever_canopy02</object-name>
        <texture>Pictures/G91-Black.png</texture>
        <ambient>
            <red>0.2</red>
            <green>0.2</green>
            <blue>0.2</blue>
        </ambient>
        <emission>
            <red>0.02</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
        <specular>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
        </specular>
    </animation>
    
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>F_lever_canopy02</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.5</interval-sec>
            <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/systems/canopy/lever-trigger</property>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>F_lever_canopy01</object-name>
        <object-name>F_lever_canopy02</object-name>
        <property>fdm/jsbsim/systems/canopy/lever-pos</property>
        <offset-deg>22</offset-deg>
        <factor>-54</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>-0.04</z-m>
        </center>
    </animation>

</PropertyList>
