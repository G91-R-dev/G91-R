<PropertyList>
    
    <model>
        <path>Aircraft/G91-R1B_HD/Models/Parts/Common/switch_panel_02-15mm_lock_model.xml</path>
    </model>
    
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>switch_cone (Meshed)</object-name>
        <object-name>switch_pin (Meshed)</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.5</interval-sec>
                 <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/systems/starter/fuel-shut-off-valve</property>
                <step>1</step>
                <min>0</min>
                <max>1</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>lock_top (Meshed)</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.5</interval-sec>
                 <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/systems/starter/fuel-shut-off-valve-lock</property>
                <step>1</step>
                <min>0</min>
                <max>1</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>switch_pin (Meshed)</object-name>
        <property>fdm/jsbsim/systems/starter/fuel-shut-off-valve-pos</property>
        <offset-deg>-15</offset-deg>
        <factor>30</factor>
        <center>
            <x-m> 0.0004</x-m>
            <y-m> 0.0</y-m>
            <z-m> 0.0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1.0</y>
            <z>0</z>
        </axis>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>lock_top (Meshed)</object-name>
        <property>fdm/jsbsim/systems/starter/fuel-shut-off-valve-lock-pos</property>
        <offset-deg>0</offset-deg>
        <factor>60</factor>
        <center>
            <x-m> 0.019</x-m>
            <y-m> 0.000</y-m>
            <z-m> 0.0045</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1.0</y>
            <z>0</z>
        </axis>
    </animation>
            
            
</PropertyList> 
