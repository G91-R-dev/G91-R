<PropertyList>
    
    <model>
        <path>Aircraft/G91-R1B_HD/Models/Parts/Common/switch_panel_3_pos_model.xml</path>
    </model>
    
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>Fillet (Meshed)</object-name>
        <object-name>pin (Meshed)</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.5</interval-sec>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/climate/sw-set-off-trigger</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/climate/sw-set-off-trigger</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>sensor 1 (Meshed)</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.5</interval-sec>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/climate/sw-set-automatic-trigger</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/climate/sw-set-automatic-trigger</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>sensor 3 (Meshed)</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.5</interval-sec>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/climate/sw-set-manual-dec-trigger</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/climate/sw-set-manual-dec-trigger</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>sensor 2 (Meshed)</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.5</interval-sec>
            <binding>
                <command>property-assign</command>
                <property>fdm/jsbsim/systems/climate/sw-set-manual-inc-trigger</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>fdm/jsbsim/systems/climate/sw-set-manual-inc-trigger</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>pin (Meshed)</object-name>
        <property>fdm/jsbsim/systems/climate/sw-set-pos_z</property>
        <offset-deg>0</offset-deg>
        <factor>-15</factor>
        <center>
            <x-m> 0.004</x-m>
            <y-m> 0.0</y-m>
            <z-m> 0.0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>     
    
    <animation>
        <type>rotate</type>
        <object-name>pin (Meshed)</object-name>
        <property>fdm/jsbsim/systems/climate/sw-set-pos_y</property>
        <offset-deg>0</offset-deg>
        <factor>-15</factor>
        <center>
            <x-m> 0.004</x-m>
            <y-m> 0.0</y-m>
            <z-m> 0.0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation> 
            
</PropertyList> 
 
