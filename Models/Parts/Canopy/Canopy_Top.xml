<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

    <path>canopy_top.ac</path>
    
    <offsets>
        <x-m>0.0</x-m>
        <y-m>0.0</y-m>
        <z-m>0.0</z-m>
        <pitch-deg>0.0</pitch-deg>
    </offsets>
    
    <animation>
        <name>CanopyGroup</name>
        <object-name>F_CANPOPY</object-name>
        <object-name>F_CANPOPY.001</object-name>
        <object-name>F_CANPOPY.002</object-name>
        <object-name>F_CANPOPY.003</object-name>
        <object-name>F_CANPOPY.004</object-name>
        <object-name>F_CANPOPY.005</object-name>
        <object-name>F_CANPOPY_guarn.2.001</object-name>
        <object-name>F_blocksistem</object-name>
        <object-name>F_dadi</object-name>
        <object-name>F_glass_est_tettuccio</object-name>
        <object-name>F_glass_int_tettuccio</object-name>
    </animation>

    <effect>
        <inherits-from>Aircraft/G91-R1B_HD/Models/Liveries/liveries_001</inherits-from>
        <object-name>F_CANPOPY.005</object-name>
    </effect>
    
    <animation> 
        <type>material</type>
        <object-name>F_CANPOPY.005</object-name>
        <diffuse>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.5</blue>
            <factor-prop>sim/G91/liveries/active/diffuse</factor-prop>
        </diffuse>
        <specular>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>sim/G91/liveries/active/specular</factor-prop>
        </specular>
        <emission>
            <red>0.05</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>noshadow</type>
        <object-name>F_glass_est_tettuccio</object-name>
        <object-name>F_glass_int_tettuccio</object-name>
        <object-name>F_dadi</object-name>
        <object-name>F_CANPOPY_guarn.2.001</object-name>
    </animation>
    
    <animation> 
        <type>material</type> 
        <object-name>F_glass_est_tettuccio</object-name>
        <transparency>
            <alpha>0.2</alpha>
        </transparency>
        <diffuse>
            <red>1.0</red>
            <green>1.0</green>
            <blue>0.0</blue>
        </diffuse>
        <ambient>
            <red>0.9</red>
            <green>0.9</green>
            <blue>0.7</blue>
        </ambient>
        <specular>
            <red>1.0</red>
            <green>1.0</green>
            <blue>0.2</blue>
        </specular>
        <emission>
            <red>0.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type> 
        <object-name>F_glass_int_tettuccio</object-name>
        <transparency>
            <alpha>0.15</alpha>
        </transparency>
        <diffuse>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.0</blue>
        </diffuse>
        <ambient>
            <red>0.3</red>
            <green>0.3</green>
            <blue>0.25</blue>
        </ambient>
        <specular>
            <red>0.5</red>
            <green>0.0</green>
            <blue>0.1</blue>
        </specular>
        <emission>
            <red>0.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
        </emission>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>F_CANPOPY</object-name>
        <object-name>F_CANPOPY.001</object-name>
        <object-name>F_CANPOPY.002</object-name>
        <object-name>F_CANPOPY.003</object-name>
        <diffuse>
            <red>0.2</red>
            <green>0.2</green>
            <blue>0.2</blue>
        </diffuse>
        <ambient>
            <red>0.4</red>
            <green>0.4</green>
            <blue>0.4</blue>
        </ambient>
        <emission>
            <red>0.03</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>F_CANPOPY_guarn.2.001</object-name>
        <diffuse>
            <red>0.66</red>
            <green>0.60</green>
            <blue>0.43</blue>
        </diffuse>
        <ambient>
            <red>0.5</red>
            <green>0.5</green>
            <blue>0.5</blue>
        </ambient>
        <emission>
            <red>0.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
        </emission>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>F_dadi</object-name>
        <object-name>F_blocksistem</object-name>
        <diffuse>
            <red>0.15</red>
            <green>0.15</green>
            <blue>0.15</blue>
        </diffuse>
        <ambient>
            <red>0.3</red>
            <green>0.3</green>
            <blue>0.3</blue>
        </ambient>
        <emission>
            <red>0.03</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
    </animation>
        
    <!-- animation -->

    <animation> 
        <type>rotate</type>
        <object-name>CanopyGroup</object-name>
        <property>fdm/jsbsim/systems/canopy/position</property>
        <factor>45</factor>
        <center>
            <x-m>-1.50104</x-m>
            <y-m> 0.0</y-m>
            <z-m> 0.55355</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

</PropertyList>
