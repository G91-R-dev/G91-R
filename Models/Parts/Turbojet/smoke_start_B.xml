<PropertyList>

    <particlesystem>
        <name>smoke startUp</name>
        
        <offsets>
            <x-m>  0.000 </x-m>
            <y-m>  0.000 </y-m>
            <z-m>  0.000 </z-m>
            <roll-deg>    90.000 </roll-deg>
            <pitch-deg>   0.000 </pitch-deg>
            <heading-deg> 20.000 </heading-deg>
        </offsets>
        
        <texture>Pictures/smoke.png</texture>
        
        <condition>
            <greater-than>
                <property>fdm/jsbsim/systems/starter/start-starter-gas-lag</property>
                <value>0.2</value>
            </greater-than>
        </condition>
        
        <emissive>false</emissive>
        <lighting>false</lighting>
        <align>billboard</align> <!-- billboard / fixed -->
        <attach>world</attach> <!-- world / local-->
        
        <placer>
            <type>point</type> <!-- sector / segments / point -->
        </placer>

        <shooter>
            <radius-min-m>0.1</radius-min-m>
            <radius-max-m>0.1</radius-max-m>
            <theta-min-deg>20</theta-min-deg>
            <theta-max-deg>50</theta-max-deg>
            <phi-min-deg>-5</phi-min-deg>
            <phi-max-deg>5</phi-max-deg>
            <speed-mps>
                <value>20</value>
                <spread>2</spread>
            </speed-mps>
            <rotation-speed>
                <x-min-deg-sec>-90</x-min-deg-sec>
                <y-min-deg-sec>-90</y-min-deg-sec>
                <z-min-deg-sec>-90</z-min-deg-sec>
                <x-max-deg-sec>90</x-max-deg-sec>
                <y-max-deg-sec>90</y-max-deg-sec>
                <z-max-deg-sec>90</z-max-deg-sec>
            </rotation-speed>
        </shooter>
        
        <counter>
            <particles-per-sec>
                <value>500</value>
                <spread>100</spread>
            </particles-per-sec>
        </counter>
        
        <particle>
            <start>
                <color>
                    <red><value>   0.3 </value></red>
                    <green><value> 0.3 </value></green>
                    <blue><value>  0.3 </value></blue>
                    <alpha><value> 0.3 </value></alpha>
                </color>
                <size>
                    <value>0.5</value>
                </size>
            </start>
            
            <end>
                <color>
                    <red><value>   0.0 </value></red>
                    <green><value> 0.0 </value></green>
                    <blue><value>  0.0 </value></blue>
                    <alpha><value> 0.0 </value></alpha>
                </color>
                <size>
                    <value>20.0</value>
                </size>
            </end>
            
            <life-sec>
                <value>10</value>
            </life-sec>

            <mass-kg>0.2</mass-kg>
            <radius-m>0.32</radius-m>

        </particle>
        
        <program>
            <fluid>air</fluid>         <!-- air / water -->
            <gravity>true</gravity>
            <wind>true</wind>
        </program>
        
    </particlesystem>

</PropertyList>
