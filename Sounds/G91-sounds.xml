<?xml version="1.0"?>

<!--The sound is deriverde from G91 project star from vitosnet@mail.ru work -->

<PropertyList>
    
    <fx>
        
        <combustion>
            <name>Startup external</name>
            <path>Aircraft/G91-R1B_HD/Sounds/G91 startup external.wav</path>
            <mode>once</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>fdm/jsbsim/systems/starter/startup-sound-lag</property>
                        <value>0.001</value>	
                    </greater-than>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>false</value>
                    </equals>
                </and>
            </condition>
            <position>
                <x> 5.185 </x>
                <y>  0.0 </y>
                <z>  0.0 </z>
            </position>
            <orientation>
                <x>1.0</x>
                <y>0.0</y>
                <z>0.0</z>
                <inner-angle>180.0</inner-angle>
                <outer-angle>360.0</outer-angle>
                <outer-gain>0.5</outer-gain>
            </orientation>
        </combustion>
        
        <combustion>
            <name>Startup external explosion</name>
            <path>Aircraft/G91-R1B_HD/Sounds/G91 startup explosion external.wav</path>
            <mode>once</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>fdm/jsbsim/systems/starter/start-starter-gas-lag</property>
                        <value>0.05</value>
                    </greater-than>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>false</value>
                    </equals>
                </and>
            </condition>
            <position>
                <x> 5.185 </x>
                <y>  0.0 </y>
                <z>  0.0 </z>
            </position>
            <orientation>
                <x>1.0</x>
                <y>0.0</y>
                <z>0.0</z>
                <inner-angle>180.0</inner-angle>
                <outer-angle>360.0</outer-angle>
                <outer-gain>0.5</outer-gain>
            </orientation>
        </combustion>
        
        <combustion>
            <name>Startup internal</name>
            <path>Aircraft/G91-R1B_HD/Sounds/G91 startup internal.wav</path>
            <mode>once</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>fdm/jsbsim/systems/starter/startup-sound-lag</property>
                        <value>0.001</value>	
                    </greater-than>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>true</value>
                    </equals>
                </and>
            </condition>
        </combustion>
        
        <combustion>
            <name>Startup internal explosion</name>
            <path>Aircraft/G91-R1B_HD/Sounds/G91 startup explosion internal.wav</path>
            <mode>once</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>fdm/jsbsim/systems/starter/start-starter-gas-lag</property>
                        <value>0.05</value>
                    </greater-than>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>true</value>
                    </equals>
                </and>
            </condition>
        </combustion>
        
        <combustion>
            <name>combustion external</name>
            <path>Aircraft/G91-R1B_HD/Sounds/MB339-motor-external.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <equals>
                        <property>engines/engine/running</property>
                        <value>1</value>	
                    </equals>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>false</value>
                    </equals>
                </and>
            </condition>
            <volume>
                <property>/fdm/jsbsim/systems/engine/rpm-norm</property>
                <factor>1.0</factor>
                <min>0.0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <property>/fdm/jsbsim/systems/engine/rpm-norm</property>
                <factor>0.1</factor>
            </pitch>
            <position>
                <x> 5.185 </x>
                <y>  0.0 </y>
                <z>  0.0 </z>
            </position>
            <orientation>
                <x>1.0</x>
                <y>0.0</y>
                <z>0.0</z>
                <inner-angle>180.0</inner-angle>
                <outer-angle>360.0</outer-angle>
                <outer-gain>0.5</outer-gain>
            </orientation>
        </combustion>
        
        <combustion>
            <name>combustion internal </name>
            <path>Aircraft/G91-R1B_HD/Sounds/MB339-motor-internal.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <equals>
                        <property>engines/engine/running</property>
                        <value>1</value>	
                    </equals>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>true</value>
                    </equals>
                </and>
            </condition>
            <volume>
                <property>/fdm/jsbsim/systems/engine/rpm-norm</property>
                <factor>1.0</factor>
                <min>0.0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <property>/fdm/jsbsim/systems/engine/rpm-norm</property>
                <factor>1.0</factor>
            </pitch>
        </combustion>
        
        <wind>
            <name>wind</name>
            <mode>looped</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/wind.wav</path>
            <volume>
                <property>fdm/jsbsim/aero/qbar-psf</property>
                <factor>0.0025</factor>
                <min>0.0</min>
                <max>2.0</max>
            </volume>
        </wind>
        
        <!-- JATO system -->
        
        <jato-burning-internal>
            <name>jato-burning-internal</name>
            <path>Aircraft/G91-R1B_HD/Sounds/Vostok-1-Stage-1-2-Engines-Internal.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>fdm/jsbsim/systems/jato/thrust-lbs-total</property>
                        <value>40</value>
                    </greater-than>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>1</value>
                    </equals>
                </and>
            </condition>
            <volume>
                <factor>0.1</factor>
                <property>fdm/jsbsim/systems/jato/thrust-lbs-total</property>
            </volume>
            <pitch>
                <factor>1.0</factor>
                <property>fdm/jsbsim/systems/jato/sound-factor</property>
            </pitch>
        </jato-burning-internal>
        
        <jato-burning-external>
            <name>jato-burning-external</name>
            <path>Aircraft/G91-R1B_HD/Sounds/Vostok-1-Stage-1-2-Engines-External.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>fdm/jsbsim/systems/jato/thrust-lbs-total</property>
                        <value>40</value>
                    </greater-than>
                    <not>
                        <equals>
                            <property>sim/current-view/internal</property>
                            <value>1</value>
                        </equals>
                    </not>
                </and>
            </condition>
            <volume>
                <factor>0.1</factor>
                <property>fdm/jsbsim/systems/jato/thrust-lbs-total</property>
            </volume>
            <pitch>
                <factor>1.0</factor>
                <property>fdm/jsbsim/systems/jato/sound-factor</property>
            </pitch>
        </jato-burning-external>
        
        <!-- gear -->
        
        <gear>
            <name>open gear</name>
            <mode>once</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/gear-audioclip-open-1534083948-17858.wav</path>
            <condition>
                <and>
                    <equals>
                        <property>/fdm/jsbsim/gear/gear-direction-sound</property>
                        <value>1</value>
                    </equals>
                    <property>sim/current-view/internal</property>
                </and>
            </condition>
            <volume>
                <factor>1.3</factor>
            </volume>
        </gear>
        
        <gear>
            <name>close gear</name>
            <mode>once</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/gear-audioclip-close-1534083948-17858.wav</path>
            <condition>
                <and>
                    <equals>
                        <property>fdm/jsbsim/gear/gear-direction-sound</property>
                        <value>-1</value>
                    </equals>
                    <property>sim/current-view/internal</property>
                </and>
            </condition>
            <volume>
                <factor>1.3</factor>
            </volume>
        </gear>
        
        <rumble>
            <name>gear rumble</name>
            <mode>looped</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/rumble.wav</path>
            <condition>
                <equals>
                    <property>sim/current-view/internal</property>
                    <value>1</value>
                </equals>
            </condition>
            <volume>
                <property>fdm/jsbsim/gear/gear-pos-norm-sound-roumble</property>
                <factor>3.0</factor>
            </volume>
        </rumble>
        
        <rumble>
            <name>rumble0</name>
            <mode>looped</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/rumble.wav</path>
            <condition>
                <equals>
                    <property>fdm/jsbsim/gear/unit[0]/WOW</property>
                    <value>1</value>
                </equals>
            </condition>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.3</factor>
            </volume>
        </rumble>
        
        <rumble>
            <name>rumble1</name>
            <mode>looped</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/rumble.wav</path>
            <condition>
                <equals>
                    <property>fdm/jsbsim/gear/unit[1]/WOW</property>
                    <value>1</value>
                </equals>
            </condition>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.5</factor>
            </volume>
        </rumble>
        
        <rumble>
            <name>rumble2</name>
            <mode>looped</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/rumble.wav</path>
            <condition>
                <equals>
                    <property>fdm/jsbsim/gear/unit[2]/WOW</property>
                    <value>1</value>
                </equals>
            </condition>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <type>log</type>
                <factor>0.5</factor>
            </volume>
        </rumble>
        
        <flaps-tear>
            <name>flaps-tear</name>
            <path>Aircraft/G91-R1B_HD/Sounds/flaps-tear.wav</path>
            <mode>once</mode>
            <condition>
                <equals>
                    <property>sounds/flaps-torn/on</property>
                    <value>1</value>
                </equals>
            </condition>
            <volume>
                <factor>1</factor>
            </volume>
        </flaps-tear>
        
        <flaps-down>
            <name>flaps-down</name>
            <path>Aircraft/G91-R1B_HD/Sounds/metal-down.wav</path>
            <mode>once</mode>
            <condition>
                <equals>
                    <property>sounds/flaps-down/on</property>
                    <value>1</value>
                </equals>
            </condition>
            <volume>
                <factor>0.3</factor>
            </volume>
        </flaps-down>
        
        <flap>
            <name>flaps</name>
            <mode>in-transit</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/flaps.wav</path>
            <property>fdm/jsbsim/fcs/flap-pos-norm</property>
            <volume>
                <factor>0.15</factor>
            </volume>
        </flap>
        
        <rumble>
            <name>air-brakes</name>
            <mode>looped</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/rumble.wav</path>
            <condition>
                <equals>
                    <property>sim/current-view/internal</property>
                    <value>1</value>
                </equals>
            </condition>
            <volume>
                <property>fdm/jsbsim/systems/airbrake/sound-roumble</property>
                <factor>4.0</factor>
            </volume>
        </rumble>
        
        <canopy_move_int>
            <name>canopy_move</name>
            <mode>once</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/canopy-audioclip-1534115848-6773.wav</path>
            <condition>
                <and>
                    <or>
                        <equals>
                            <property>fdm/jsbsim/systems/canopy/position-go</property>
                            <value>1</value>
                        </equals>
                        <equals>
                            <property>fdm/jsbsim/systems/canopy/position-go</property>
                            <value>-1</value>
                        </equals>
                    </or>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>1</value>
                    </equals>
                </and>
            </condition>
            <volume>
                <factor>0.5</factor>
            </volume>
        </canopy_move_int>
        
        <canopy_stop_int>
            <name>canopy_stop</name>
            <mode>once</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/canopy-stop-audioclip-1534116200-6087.wav</path>
            <condition>
                <and>
                    <equals>
                        <property>fdm/jsbsim/systems/canopy/position-stopping-go</property>
                        <value>1</value>
                    </equals>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>1</value>
                    </equals>
                </and>
            </condition>
            <volume>
                <factor>1.0</factor>
            </volume>
        </canopy_stop_int>
        
        <canopy_move_ext>
            <name>canopy_move</name>
            <mode>in-transit</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/canopy-audioclip-1534115848-6773.wav</path>
            <condition>
                <and>
                    <or>
                        <equals>
                            <property>fdm/jsbsim/systems/canopy/position-go</property>
                            <value>1</value>
                        </equals>
                        <equals>
                            <property>fdm/jsbsim/systems/canopy/position-go</property>
                            <value>-1</value>
                        </equals>
                    </or>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>0</value>
                    </equals>
                </and>
            </condition>
            <volume>
                <factor>1.0</factor>
            </volume>
        </canopy_move_ext>
        
        <canopy_stop_ext>
            <name>canopy_stop</name>
            <mode>in-transit</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/canopy-stop-audioclip-1534116200-6087.wav</path>
            <condition>
                <and>
                    <equals>
                        <property>fdm/jsbsim/systems/canopy/position-stopping-go</property>
                        <value>1</value>
                    </equals>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>0</value>
                    </equals>
                </and>
            </condition>
            <volume>
                <factor>0.5</factor>
            </volume>
        </canopy_stop_ext>
        
        <canopy_lock_int>
            <name>canopy_lock_int</name>
            <mode>once</mode>
            <path>Aircraft/G91-R1B_HD/Sounds/canopy-close-left.wav</path>
            <condition>
                <and>
                    <equals>
                        <property>fdm/jsbsim/systems/canopy/lever-lock</property>
                        <value>1</value>
                    </equals>
                </and>
            </condition>
            <volume>
                <factor>0.5</factor>
            </volume>
        </canopy_lock_int>
        
    </fx>
    
</PropertyList>
